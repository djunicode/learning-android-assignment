<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/artistSearchCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/bac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SingerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:scrollbars="horizontal"
                android:text="SingerName"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SinListeners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:scrollbars="horizontal"
                android:text="SinListeners"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/toptrAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:autoLink="web"
                android:clickable="false"
                android:contextClickable="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:linksClickable="true"
                android:padding="2dp"
                android:scrollbars="horizontal"
                android:text="Top tracks available at"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHighlight="@color/design_default_color_on_primary"
                android:textColorHint="@color/design_default_color_background"
                android:textColorLink="@android:color/holo_purple"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SinUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:autoLink="web"
                android:clickable="false"
                android:contextClickable="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:linksClickable="true"
                android:padding="2dp"
                android:scrollbars="horizontal"
                android:text="Top tracks available at"
                android:textColor="@android:color/holo_purple"
                android:textColorHighlight="@color/design_default_color_on_primary"
                android:textColorHint="@color/design_default_color_background"
                android:textColorLink="@android:color/holo_purple"
                android:textSize="18sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
